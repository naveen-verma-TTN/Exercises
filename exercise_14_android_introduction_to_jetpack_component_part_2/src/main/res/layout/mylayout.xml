<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.example.exercise_14_android_introduction_to_jetpack_component_part_2.utilities.StringUtil" />

        <variable
            name="user"
            type="com.example.exercise_14_android_introduction_to_jetpack_component_part_2.model.User" />

        <variable
            name="imageUrl"
            type="String" />

        <variable
            name="clickListener"
            type="com.example.exercise_14_android_introduction_to_jetpack_component_part_2.ListItemClickListener" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="50dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:cardCornerRadius="20dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_launcher_background"
                tools:imageUrl="@{imageUrl}" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/photo"
                android:hint="@{user.name}"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_toEndOf="@+id/photo"
                android:text="@{user.email}"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_toEndOf="@+id/photo"
                android:text="@{StringUtil.getPhoneNumber(user.phone)}"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone"
                android:layout_toEndOf="@+id/photo"
                android:text="@{user.address}"
                android:textSize="20sp"
                android:textStyle="italic" />

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/address"
                android:layout_alignStart="@+id/address"
                android:layout_margin="10dp"
                android:background="#0003DAC5"
                android:elevation="50dp"
                android:gravity="center"
                android:onClick="@{()-> clickListener.onDeleteUser(user)}"
                android:padding="10dp"
                android:src="@android:drawable/ic_delete"
                android:textSize="15sp"
                android:tooltipText="Update"
                tools:targetApi="o" />

            <ImageButton
                android:id="@+id/update"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/address"
                android:layout_margin="10dp"
                android:layout_toEndOf="@+id/delete"
                android:background="#0003DAC5"
                android:elevation="50dp"
                android:gravity="center"
                android:onClick="@{()-> clickListener.onUpdateUser(user)}"
                android:padding="10dp"

                android:src="@drawable/update"
                android:textSize="15sp"
                android:tooltipText="Update"
                tools:targetApi="o" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</layout>

